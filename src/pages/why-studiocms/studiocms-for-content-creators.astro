---
import PageHeader from '@/components/PageHeader.astro';
import Layout from '@/layouts/Layout.astro';

import { StudioCMSRenderer } from 'studiocms:renderer';
import { SDKCoreJs, runSDK } from 'studiocms:sdk';

const page = await runSDK(SDKCoreJs.GET.page.bySlug('studiocms-for-content-creators'));

if (!page) {
	return new Response(null, { status: 404 });
}
---
<Layout
	title="StudioCMS for Content Creators"
	desc="StudioCMS is easy to use even without technical knowledge. Here's how we can make creating content easier for you."
>
	<PageHeader
		title="StudioCMS for Content Creators"
	/>
	<article>
		<StudioCMSRenderer data={page.data} />	
	</article>
</Layout>
