---
import PageHeader from '@/components/PageHeader.astro';
import Layout from '@/layouts/Layout.astro';

import { StudioCMSRenderer } from 'studiocms:renderer';
import { SDKCoreJs, runSDK } from 'studiocms:sdk';

const page = await runSDK(SDKCoreJs.GET.page.bySlug('studiocms-for-developers'));

if (!page.data) {
	return new Response(null, { status: 404 });
}
---
<Layout
	title="StudioCMS for Developers"
	desc="StudioCMS offers a lot of benefits to developers in the Astro ecosystem."
>
	<PageHeader
		title="StudioCMS for Developers"
	/>
	<article>
		<StudioCMSRenderer data={page.data} />	
	</article>
</Layout>
