import { getNpmMonthlyDownloads, getDiscordMembers } from 'quick-astro:cache';

const getNewestBlogPost = async () => {
	const pageFolderTree = await cached_SDK.GET.pageFolderTree(false, true);
	const entries = (pageFolderTree.data.find((folder) => folder.name === 'Blog') || { children: [] }).children;

	const articles = entries.filter((x) => !!x.pageData).sort((a, b) => b.pageData!.publishedAt.getTime() - a.pageData!.publishedAt.getTime());

	if (articles.length === 0) {
		return null;
	}

	const article = articles[0];

	const { title, description, publishedAt, slug, heroImage } = article.pageData!;

	return {
		title,
		publishedAt,
		slug,
		heroImage,
		description,
	}
}

const [npmDownloads, discordMembers, newestBlogPost] = await Promise.all([
	getNpmMonthlyDownloads('studiocms'),
	getDiscordMembers(),
	getNewestBlogPost(),
]);
