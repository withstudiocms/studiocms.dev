---
import Orbits from '@/assets/orbits.svg';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<section class="page-header">
	<Orbits class="orbits" />
	<div class="container">
		<h1>{title}</h1>
		<slot name="description" />
	</div>
</section>
<style>
	.page-header {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
		padding: 12rem 0 8rem 0;
		gap: 1rem;
		width: var(--page-width);
		margin: 0 auto;
		border-bottom-left-radius: 1.25rem;
		border-bottom-right-radius: 1.25rem;
		position: relative;
		overflow: hidden;
		background-color: hsl(var(--background-base));
		z-index: 1;
		margin-bottom: 2rem;
	}

	.page-header > * {
		z-index: 5;
	}

	.page-header::before {
		content: "";
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-image: url('/noise.png');
		background-repeat: repeat;
		opacity: .5;
		z-index: 2;
	}

	.page-header::after {
		content: "";
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: #a581f3;
		mask-image: 
			radial-gradient(ellipse at 0% -10%, hsl(var(--background-base) / 0) 0%, hsla(var(--background-base) / 0) 70%, hsl(var(--background-base)) 100%),
			radial-gradient(ellipse at 100% -10%, hsl(var(--background-base) / 0) 0%, hsla(var(--background-base) / 0) 70%, hsl(var(--background-base)) 100%);
		opacity: 0.4;
		z-index: 1;
	}

	.orbits {
		position: absolute;
		top: -50%;
		left: 0;
		width: 100%;
		height: auto;
	}

	h1 {
		font-size: 2.25em;
		margin-bottom: 1rem;
	}
</style>